<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    tools:context=".ui.insetos.ClassificarFragment">


    <TextView
        android:id="@+id/tvOpcaoB"
        android:layout_width="290dp"
        android:layout_height="65dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/opcao_b"
        android:textAlignment="center"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.009"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/outlineImg3" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="196dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#035815"
        android:clickable="true"
        android:src="@drawable/ic_bug"
        app:backgroundTint="#035815"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnA" />

    <TextView
        android:id="@+id/outlineImg4"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/outline_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvQuestionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="#FFFFFF"
        android:text="@string/questao"
        android:textColor="#035815"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/outlineImg4"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/outlineImg4"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/outlineImg2"
        android:layout_width="270dp"
        android:layout_height="140dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/outline_green"
        app:layout_constraintEnd_toStartOf="@+id/btnA"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/outlineImg4" />

    <com.ortiz.touchview.TouchImageView
        android:id="@+id/imgB"
        android:layout_width="250dp"
        android:layout_height="125dp"
        android:layout_weight="1"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:scaleType="centerInside"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/outlineImg3"
        app:layout_constraintEnd_toEndOf="@+id/outlineImg3"
        app:layout_constraintStart_toStartOf="@+id/outlineImg3"
        app:layout_constraintTop_toTopOf="@+id/outlineImg3"
        app:srcCompat="@android:drawable/ic_menu_camera"
        tools:src="@android:drawable/ic_menu_camera"
        tools:srcCompat="@android:drawable/ic_menu_camera" />

    <TextView
        android:id="@+id/outlineImg3"
        android:layout_width="270dp"
        android:layout_height="140dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/outline_green"
        app:layout_constraintEnd_toStartOf="@+id/btnB"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvOpcaoA" />

    <com.ortiz.touchview.TouchImageView
        android:id="@+id/imgA"
        android:layout_width="250dp"
        android:layout_height="125dp"
        android:layout_weight="1"
        android:adjustViewBounds="false"

        android:cropToPadding="false"
        android:scaleType="centerInside"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/outlineImg2"
        app:layout_constraintEnd_toEndOf="@+id/outlineImg2"
        app:layout_constraintStart_toStartOf="@+id/outlineImg2"
        app:layout_constraintTop_toTopOf="@+id/outlineImg2"
        app:srcCompat="@drawable/ic_camera"
        tools:src="@drawable/ic_camera"
        tools:srcCompat="@android:drawable/ic_menu_camera" />

    <Button
        android:id="@+id/btnAnterior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#035815"
        android:drawableLeft="@drawable/ic_back"
        android:text="@string/voltar"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/btnImgTaken"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvOpcaoB"
        app:layout_constraintVertical_bias="0.448" />

    <Button
        android:id="@+id/btnImgTaken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#378508"
        android:drawableLeft="@drawable/ic_camera"
        android:text="@string/consultar_imagem"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="348dp"
        android:layout_height="54dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:text="@string/questao"
        android:textAlignment="center"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/outlineImg4"
        app:layout_constraintEnd_toEndOf="@+id/outlineImg4"
        app:layout_constraintStart_toStartOf="@+id/outlineImg4"
        app:layout_constraintTop_toTopOf="@+id/outlineImg4" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnA"
        android:tint="@color/white"
        android:focusable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="8dp"
        android:clickable="true"
        android:src="@drawable/ic_bug"
        app:backgroundTint="#035815"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/outlineImg4" />

    <TextView
        android:id="@+id/tvOpcaoA"
        android:layout_width="290dp"
        android:layout_height="65dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/opcao_a"
        android:textAlignment="center"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/outlineImg2" />

    <ProgressBar
        android:id="@+id/pbLoading"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:indeterminateTint="#035815"
        app:layout_constraintBottom_toTopOf="@+id/btnB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnA"
        app:layout_constraintVertical_bias="0.439" />

    <TextView
        android:id="@+id/tvLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/a_carregar"
        android:textColor="#035815"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pbLoading" />

</androidx.constraintlayout.widget.ConstraintLayout>